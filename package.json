{
  "name": "parallel-es",
  "version": "0.0.2",
  "description": "Simple parallelization for EcmaScript",
  "main": "./dist/browser-commonjs.parallel.js",
  "browser": "./dist/browser-commonjs.parallel.js",
  "types": "./dist/browser/index.d.ts",
  "scripts": {
    "build": "cross-env NODE_ENV=prod webpack --progress && cross-env NODE_ENV=prod-es6 webpack --progress && npm run build:declarations",
    "build:doc": "typedoc --out ./docs --module umd --target es6 --name \"Parallel ES\" ./src",
    "build:gh-pages": "cross-env NODE_ENV=gh-pages webpack --progress",
    "build:declarations": "tsc --declaration --outDir ./tmp -p tsconfig.json && copyfiles -u 1 './tmp/**/*.d.ts' ./dist",
    "prepublish": "npm run-script build",
    "start": "cross-env NODE_ENV=dev webpack-dev-server --progress --content-base example --hot",
    "test": "cross-env NODE_ENV=test-ci karma start --single-run && npm run coverage:remap",
    "test:watch": "cross-env NODE_ENV=test karma start",
    "coverage:remap": "remap-istanbul --input ./coverage/Firefox*/coverage-final.json --output ./coverage/html -t html && remap-istanbul --input ./coverage/Firefox*/coverage-final.json --output ./coverage/lcov.info -t lcovonly",
    "coveralljs": "cat ./coverage/lcov.info | node_modules/coveralls/bin/coveralls.js && rm -rf coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DatenMetzgerX/parallel.es.git"
  },
  "keywords": [
    "Parallel",
    "JS",
    "Parallel.For",
    "ECMAScript",
    "Web Workers"
  ],
  "author": "Micha Reiser <micha@famreiser.ch>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DatenMetzgerX/parallel.es/issues"
  },
  "homepage": "https://github.com/DatenMetzgerX/parallel.es#readme",
  "devDependencies": {
    "@types/jasmine": "^2.2.34",
    "@types/lodash": "^4.14.36",
    "awesome-typescript-loader": "2.2.4",
    "babel-core": "6.17.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-es2015": "6.16.0",
    "babel-runtime": "6.11.6",
    "compression-webpack-plugin": "0.3.1",
    "copyfiles": "^1.0.0",
    "coveralls": "2.11.14",
    "cross-env": "3.0.0",
    "istanbul-instrumenter-loader": "github:datenmetzgerx/istanbul-instrumenter-loader#with-patched-lib-istanbul-instrument",
    "jasmine-core": "2.5.2",
    "json-loader": "0.5.4",
    "karma": "1.3.0",
    "karma-browserstack-launcher": "1.1.1",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-firefox-launcher": "1.0.0",
    "karma-jasmine": "1.0.2",
    "karma-jasmine-diff-reporter": "0.6.2",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "lodash": "4.16.2",
    "remap-istanbul": "github:datenmetzgerx/remap-istanbul#consider-sourcemap-from-file-coverage",
    "simjs-random": "0.2.6",
    "tslint": "3.15.1",
    "tslint-loader": "2.1.5",
    "typedoc": "github:datenmetzgerx/typedoc#typescript-2-build",
    "typedoc-plugin-external-module-name": "1.0.2",
    "typescript": "2.0.3",
    "webpack": "2.1.0-beta.22",
    "webpack-config": "6.1.3",
    "webpack-dev-server": "2.1.0-beta.4",
    "worker-loader": "github:datenmetzgerx/worker-loader#use-query-name-as-entry-name"
  }
}
