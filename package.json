{
  "name": "parallel-es",
  "version": "0.1.19",
  "description": "Simple parallelization for EcmaScript",
  "main": "./dist/node/parallel.js",
  "browser": "./dist/browser/parallel.js",
  "types": "./dist/api/browser.d.ts",
  "scripts": {
    "build": "cross-env NODE_ENV=prod webpack --progress && npm run build:declarations",
    "build:doc": "typedoc --out ./docs --module umd --target es6 --name \"Parallel ES\" ./src",
    "build:declarations":
      "tsc --declaration --outDir ./tmp -p tsconfig.json && copyfiles -u 1 './tmp/**/*.d.ts' ./dist",
    "lint": "tslint --project .",
    "prepublish": "npm run-script build",
    "precommit": "lint-staged",
    "start": "cross-env NODE_ENV=dev webpack --progress --watch",
    "test": "cross-env NODE_ENV=test-ci karma start --single-run && npm run coverage:remap",
    "test:watch": "cross-env NODE_ENV=test karma start",
    "coverage:remap":
      "remap-istanbul --input ./coverage/Firefox*/coverage-final.json --output ./coverage/html -t html && remap-istanbul --input ./coverage/Firefox*/coverage-final.json --output ./coverage/lcov.info -t lcovonly",
    "coveralljs": "cat ./coverage/lcov.info | node_modules/coveralls/bin/coveralls.js && rm -rf coverage"
  },
  "lint-staged": {
    "*.ts": ["prettier --write", "tslint --fix", "git add"],
    "*.{json,js}": ["prettier --write", "git add"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MichaReiser/parallel.es.git"
  },
  "keywords": ["Parallel", "JS", "Parallel.For", "ECMAScript", "Web Workers"],
  "author": "Micha Reiser <micha@famreiser.ch>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MichaReiser/parallel.es/issues"
  },
  "homepage": "https://github.com/MichaReiser/parallel.es#readme",
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "@types/node": "^9.4.7",
    "awesome-typescript-loader": "^4.0.1",
    "copyfiles": "^2.0.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "husky": "^0.14.3",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine-core": "2.x.x",
    "karma": "^2.0.0",
    "karma-browserstack-launcher": "^1.3.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.1",
    "karma-jasmine-diff-reporter": "^1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.13",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "remap-istanbul": "^0.10.1",
    "ts-lib": "^0.0.5",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-loader": "^3.6.0",
    "typedoc": "^0.11.1",
    "typedoc-plugin-external-module-name": "^1.1.1",
    "typescript": "^2.7.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.11",
    "webpack-config": "^7.5.0",
    "webpack-dev-server": "^3.1.1",
    "worker-loader": "^1.1.1"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1"
  }
}
